<script>
	{{#if unauthorized}}
		{{#if message}}
			alert("{{message}}");
		{{else}}	
			alert("Usuario no autorizado");
		{{/if}}
		
	{{/if}}
	{{#if loggedout}}
			alert("Sesión finalizada");
	{{/if}}
	{{#if redirected}}
			alert("Realice inicio de sesión de usuario");
	{{/if}}
	// on form submit pass over querystring
	$("form#login").submit( evt=>{
		//~ evt.preventDefault()
		const urlParams = new URLSearchParams(window.location.search);
		for (const [key, value] of urlParams) {
			$("<input />").attr("type","hidden")
						.attr("name",key)
						.attr("value",value)
						.appendTo("form#login")
		}
		return true
	})
</script>

<h4>Inicio de sesión</h4>
<form method="POST" id=login>
	<div id=submit>
		<table id=submit>
			<tr>
				<td><label for=username>Usuario</label></td>
				<td><input type=text name=username placeholder="nombre de usuario"></td>
			</tr>
			<tr>
				<td><label for=password>Contraseña</label></td>
				<td><input type=password name=password placeholder="contraseña"></td>
			</tr>
			<tr>
				<td colspan=2 style="align: centered"><button>Login</button></td>
			</tr>
		</table>
	</div>
</form>
